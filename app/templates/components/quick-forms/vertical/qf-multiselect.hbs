{{#view tagName="div" classNameBindings=':form-group field.showError:has-error'}}
    {{#if field.hasLabel}} <label class="control-label" for="{{field.controlID}}">{{field.label}}</label> {{/if}}

    {{view 'select' multiple='true' class='form-control'
        id=field.controlID
        selection=field.value
        content=field.contents
        optionValuePath='content.id'
        optionLabelPath='content.label'
    }}

    {{#if field.hasErrorHint}}
        {{#if field.showError}}
        <span class="help-block">{{field.errorMessage}}</span>
        {{/if}}
    {{/if}}
{{/view}}